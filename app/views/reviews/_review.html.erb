<%= form_for(@review) do |f| %>
    <%= f.label "Movie" %>
    <br>
    <% if @movie %>
        <%= @movie.title %>
        <%= f.hidden_field :movie_id, value: @movie.id %>
    <% else %>
    <%= f.collection_select(:movie_id, Movie.all, :id, :title) %>
    <% end %>
    <br>
    <%= f.label "Header" %>
    <br>
    <%= f.text_field :header %>
    <br>
    <%= f.label "Review" %>
    <br>
    <%= f.text_area :body, size: "30x10" %>
    <br>
    <%= f.submit %>
<% end %>    
